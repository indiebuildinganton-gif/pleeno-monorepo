{
  "name": "pleeno-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:log": "./scripts/dev-with-logging.sh",
    "dev:view-logs": "./scripts/view-dev-logs.sh",
    "build": "turbo run build",
    "build:shell": "turbo run build --filter=shell",
    "build:dashboard": "turbo run build --filter=dashboard",
    "build:agency": "turbo run build --filter=agency",
    "build:entities": "turbo run build --filter=entities",
    "build:payments": "turbo run build --filter=payments",
    "build:reports": "turbo run build --filter=reports",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:seed": "./scripts/apply-migrations.sh",
    "db:seed:local": "npx supabase db reset",
    "db:reset": "npx supabase db reset --no-seed && npm run db:seed",
    "db:create-demo": "./scripts/create-demo-user.sh",
    "dev:reports": "cd apps/reports && npm run dev -- --port 3000",
    "dev:entities": "cd apps/entities && npm run dev -- --port 3001",
    "dev:dashboard": "cd apps/dashboard && npm run dev -- --port 3002",
    "dev:payments": "cd apps/payments && npm run dev -- --port 3003",
    "dev:agency": "cd apps/agency && npm run dev -- --port 3004",
    "dev:shell": "cd apps/shell && npm run dev -- --port 3005",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.0",
    "@supabase/supabase-js": "^2.47.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.7.6",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "happy-dom": "^20.3.9",
    "husky": "^9.1.7",
    "import-in-the-middle": "^2.0.5",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "next": "^16.0.7",
    "prettier": "^3.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "require-in-the-middle": "^8.0.1",
    "turbo": "^2.7.6",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "^18.18.0 || ^19.8.0 || >=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "apps/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'ESLINT_USE_FLAT_CONFIG=false eslint --fix \"$@\"' --"
    ],
    "packages/**/*.{ts,tsx}": [
      "bash -c 'ESLINT_USE_FLAT_CONFIG=false eslint --fix \"$@\"' --"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@react-email/components": "^1.0.1",
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/ssr": "^0.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "pg": "^8.16.3",
    "resend": "^6.4.2",
    "tailwind-merge": "^3.4.0"
  },
  "pnpm": {
    "overrides": {
      "import-in-the-middle": "2.0.5",
      "require-in-the-middle": "8.0.1"
    }
  }
}
