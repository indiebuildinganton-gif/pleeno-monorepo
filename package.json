{
  "name": "pleeno-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:log": "./scripts/dev-with-logging.sh",
    "dev:view-logs": "./scripts/view-dev-logs.sh",
    "build": "turbo run build",
    "build:shell": "turbo run build --filter=shell",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:seed": "./scripts/apply-migrations.sh",
    "db:seed:local": "npx supabase db reset",
    "db:reset": "npx supabase db reset --no-seed && npm run db:seed",
    "db:create-demo": "./scripts/create-demo-user.sh",
    "dev:reports": "cd apps/reports && npm run dev -- --port 3000",
    "dev:entities": "cd apps/entities && npm run dev -- --port 3001",
    "dev:dashboard": "cd apps/dashboard && npm run dev -- --port 3002",
    "dev:payments": "cd apps/payments && npm run dev -- --port 3003",
    "dev:agency": "cd apps/agency && npm run dev -- --port 3004",
    "dev:shell": "cd apps/shell && npm run dev -- --port 3005",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@supabase/supabase-js": "^2.47.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.3.3",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "import-in-the-middle": "^2.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "msw": "^2.12.1",
    "next": "^16.0.7",
    "prettier": "^3.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "require-in-the-middle": "^8.0.1",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": "^18.18.0 || ^19.8.0 || >=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "apps/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'ESLINT_USE_FLAT_CONFIG=false eslint --fix \"$@\"' --"
    ],
    "packages/**/*.{ts,tsx}": [
      "bash -c 'ESLINT_USE_FLAT_CONFIG=false eslint --fix \"$@\"' --"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@react-email/components": "^1.0.1",
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/ssr": "^0.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "resend": "^6.4.2",
    "tailwind-merge": "^3.4.0"
  },
  "pnpm": {
    "overrides": {
      "import-in-the-middle": "2.0.0",
      "require-in-the-middle": "8.0.1"
    }
  }
}
